    "version": "0.2.0",
    "configurations": [
        {
            "name": "RCT GCS",
            "request": "launch",
            "type": "python",
            "program": "RctGcs/rctGCS.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder};"
            }
        },
        {
            "name": "Drone Simulator",
            "type": "python",
            "request": "launch",
            "program": "RctGcs/droneSimulator.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--protocol",
                "tcp"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder};"
            }
        }
    ]
}